<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_introduction_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.touchtale.jon.prototype.IntroductionPage"
    android:background="@drawable/pg3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Lyanne"
        android:ems="10"
        android:layout_marginBottom="196dp"
        android:id="@+id/greeting"
        android:typeface="normal"
        android:fontFamily="casual"
        android:textSize="36pt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="555dp"
        android:textColor="?android:attr/colorMultiSelectHighlight"
        android:textStyle="normal|bold" />

    <Button
        android:text="Button"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/button2"
        android:alpha="0"
        android:onClick="nextPage"
        android:layout_marginTop="161dp"
        android:layout_alignTop="@+id/greeting"
        android:layout_alignStart="@+id/greeting"
        android:layout_marginStart="208dp" />
</RelativeLayout>
